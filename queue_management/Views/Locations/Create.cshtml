@model queue_management.Models.Location

@{
    ViewData["Title"] = "Create";
    ViewData["Content-Wrapper-Title"] = "Create Location";
}


    <div class="row">
          <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Create</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                  <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="Country"></label>
                    <input asp-for="Country" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="Country" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="Department"></label>
                    <input asp-for="Department" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="Department" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="Region"></label>
                    <input asp-for="Region" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="Region" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="Municipality"></label>
                    <input asp-for="Municipality" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="Municipality" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="City" class="text-danger"></span>
                  </div>
                  <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Enter address">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Create</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.row -->
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
