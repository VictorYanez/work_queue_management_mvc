@using queue_management.Models
@model queue_management.Models.Location

@{
    if (ViewData != null)
    {
        ViewData["Title"] = "Editar Local";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Borrar</title>
</head>

<body>
    <h1>Borrar Local </h1>
    <h3>
        Id.: @Model.LocationID - @(Model.Country?.CountryName ?? "N/A") - @(Model.Department?.DepartmentName ?? "N/A") -
        @(Model.Region?.RegionName ?? "N/A") - @Model.Municipality.MunicipalityName - @Model.City.CityName
    </h3>
    <h3>¿Estás seguro de que deseas borrar este Local?</h3>
    <hr />

    <div class="col-md-4">
        <form asp-controller="Locations" asp-action="Delete" method="post">
            <!-- Definir el id que se envía desde la vista al controlador -->
            <input type="hidden" asp-for="LocationID" value="LocationID" class="Location" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!--- Para Nombre de País   -->
            <div class="mb-3 form-group">
                <label asp-for="Country.CountryName" class="form-label">@Html.DisplayNameFor(model => model.Country)</label>
                <input type="text" asp-for="Country.CountryName" class="form-control" readonly />
                <span asp-validation-for="Country.CountryName" class="text-danger"></span>
            </div>

            <!--- Para Nombre de Departamento   -->
            <div class="mb-3 form-group">
                <label asp-for="Department.DepartmentName" class="form-label"> @Html.DisplayNameFor(model => model.Department)</label>
                <input type="text" asp-for="Department.DepartmentName" class="form-control" readonly />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>

            <!--- Para Nombre de la Region   -->
            <div class="mb-3 form-group">
                <label asp-for="Region.RegionName" class="form-label">@Html.DisplayNameFor(model => model.Region)</label>
                <input type="text" asp-for="Region.RegionName" class="form-control" readonly />
                <span asp-validation-for="Region.RegionName" class="text-danger"></span>
            </div>

            <!--- Para Nombre de la Municipio  -->
            <div class="mb-3 form-group">
                <label asp-for="Municipality.MunicipalityName" class="form-label">@Html.DisplayNameFor(model => model.Municipality)</label>
                <input type="text" asp-for="Municipality.MunicipalityName" class="form-control" readonly />
                <span asp-validation-for="Municipality.MunicipalityName" class="text-danger"></span>
            </div>

            <!--- Para Nombre de la Ciudad   -->
            <div class="mb-3 form-group">
                <label asp-for="City.CityName" class="form-label">@Html.DisplayNameFor(model => model.City)</label>
                <input type="text" asp-for="City.CityName" class="form-control" readonly />
                <span asp-validation-for="City.CityName" class="text-danger"></span>
            </div>

            <!---  Para los campos propios de Locales  -->
            <div class="form-group">
                <label asp-for="LocationName" class="control-label"></label>
                <input asp-for="LocationName" class="form-control" readonly />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!---------------  Botones summit y cancelar  ------------->
            <div class="form-group">
                <hr />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-check-square"></i> Borrar
                </button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-x-square"></i> Cancelar
                </a>
            </div>

        </form>
    </div>

</body>
</html>
