@using queue_management.Models
@model queue_management.Models.Department

@{
    ViewData["Title"] = "Crear Departamento";
}

<h1>Crear Departamento</h1>
<hr />
<h4>Crear un nuevo Departamento asociado a un país</h4>
<hr />

    <div class="col-md-4">

        <form asp-action="Create" asp-controller="Departments" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo oculto para DepartmentID -->
        <!--  <input type="hidden" asp-for="DepartmentID" /> -->
           
            <!--- Para Lista de Pais   -->
            <div class="mb-3 form-group">
                <label asp-for="CountryID" class="form-label">País </label>
                <select class="form-select form-select sm" asp-for="CountryID" asp-items="ViewBag.CountryID">
                    <option value=""> --- Seleccionar País --- </option>
                </select>
                <span asp-validation-for="CountryID" class="text-danger"></span>             
            </div>
            <!---  Para los campos propios de Departamento  -->
            <div class="form-group mb-3">
                <label asp-for="DepartmentName" class="control-label" type="text"></label>
                <input asp-for="DepartmentName" class="form-control" placeholder="Ingresa la descripción del Departamento" type="text" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!---------------  Botones summit y cancelar  ------------->
                <hr />
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-square"></i> Aplicar</button>
                <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-x-square"></i> Cancelar</a>
            </div>
        </form>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}