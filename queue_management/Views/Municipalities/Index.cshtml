@using queue_management.Models
@model IEnumerable<Municipality>


@{
    ViewData["Title"] = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
<h1 class="text-center">Listado de Municipios</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Municipalities" class="btn btn-success d-block mx-auto btn-lg">
                <i class="bi bi-folder-plus mr-2"></i>&nbsp;&nbsp;Nuevo Municipio
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Listado de @Model.Count() Municipios</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaRegions" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.Country.CountryName)</th>
                                <th>@Html.DisplayNameFor(m => m.Department.DepartmentName)</th>
                                <th>@Html.DisplayNameFor(m => m.Region.RegionName)</th>
                                <th>@Html.DisplayNameFor(m => m.MunicipalityName)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.Country.CountryName)</td>
                                    <td>@Html.DisplayFor(m => item.Department.DepartmentName)</td>
                                    <td>@Html.DisplayFor(m => item.Region.RegionName)</td>
                                    <td>@Html.DisplayFor(m => item.MunicipalityName)</td>
                                    <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.MunicipalityID">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MunicipalityID">
                                            <i class="bi bi-info-circle"></i> Detalle
                                        </a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MunicipalityID">
                                            <i class="bi bi-eraser"></i> Borrar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

</body>
</html>
