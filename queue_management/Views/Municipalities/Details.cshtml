@using queue_management.Models
@model queue_management.Models.Municipality

@{
    ViewData["Title"] = "Detalles del Municipio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>

<body>
    <h1>Detalle del Municipio </h1>
    <h3>Id.: @Model.MunicipalityID - @Model.Country?.CountryName - @Model.Department?.DepartmentName 
        - @Model?.Region?.RegionName - @Model?.MunicipalityName</h3>
    <hr />
    <div class="col-md-4">
    <form asp-controller="Municipalities" asp-action="Details" method="post">
        <!-- Definir el id que se envía desde la vista al controlador -->
        <input type="hidden" asp-for="MunicipalityID" value="MunicipalityID" class="Municipality" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!--- Para Nombre de País   -->
        <div class="mb-3 form-group">
            <label asp-for="Country.CountryName" class="form-label">@Html.DisplayNameFor(model => model.Country)</label>
            <input type="text" asp-for="Country.CountryName" class="form-control" readonly />
            <span asp-validation-for="Country.CountryName" class="text-danger"></span>
        </div>

        <!--- Para Nombre de Departamento   -->
        <div class="mb-3 form-group">
            <label asp-for="Department.DepartmentName" class="form-label"> @Html.DisplayNameFor(model => model.Department)</label>
            <input type="text" asp-for="Department.DepartmentName" class="form-control" readonly />
            <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
        </div>

        <!--- Para Nombre de la Region   -->
        <div class="mb-3 form-group">
            <label asp-for="Region.RegionName" class="form-label">@Html.DisplayNameFor(model => model.Region)</label>
            <input type="text" asp-for="Region.RegionName" class="form-control" readonly />
            <span asp-validation-for="Region.RegionName" class="text-danger"></span>
        </div>

        <!--- Para Nombre de Municipio   -->
        <div class="mb-3 form-group">
            <label asp-for="MunicipalityName" class="form-label"> @Html.DisplayNameFor(model => model.MunicipalityName)</label>
            <input type="text" asp-for="MunicipalityName" class="form-control" readonly />
            <span asp-validation-for="MunicipalityName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <!---------------  Botones summit y Editar  ------------->
            <hr />
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.MunicipalityID">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-x-square"></i> Cancelar
            </a>
        </div>
    </form>
    </div>
</body>
</html>
