@using queue_management.Models
@model queue_management.Models.Status

@{
    ViewData["Title"] = "Crear Estatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Estatus</h1>
<hr />
<h4>Nuevo Estatus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Status" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StatusName" class="control-label"></label>
                <input asp-for="StatusName" class="form-control" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!---------------  Botones summit y cancelar  ------------->
                <hr />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-square"></i> Aplicar</button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-x-square"></i> Cancelar</a>
            </div>
                         
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
