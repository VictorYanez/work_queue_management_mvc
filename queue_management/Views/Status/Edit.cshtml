@using queue_management.Models
@model queue_management.Models.Status

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Estatus</h1>
<h3>Id.: @Model.StatusID - @Model.StatusName </h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Status" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StatusID" />

            <div class="form-group mb3">
                <label asp-for="StatusName" class="control-label" type="text"></label>
                <input asp-for="StatusName" class="form-control" placeholder="Ingresa la descripción del Estatus" type="text" />
                <span asp-validation-for="StatusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!---------------  Botones summit y cancelar  ------------->
                <hr />
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-square"></i> Aplicar</button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-x-square"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
