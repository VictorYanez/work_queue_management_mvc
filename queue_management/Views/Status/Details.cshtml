@using queue_management.Models
@model queue_management.Models.Status

@{
    ViewData["Title"] = "Detalles del Estatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle del Estatus</h1>
<h3>Id.: @Model.StatusID - @Model.StatusName </h3>
<hr />

<form asp-controller="Status" asp-action="Index" method="get">

    <!-- Definir el id que se envía desde la vista al controlador -->
    <input type="hidden" asp-for="StatusID" value="@Model.StatusID" class="Rol" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!--- Para Nombre del Rol   -->
    <div class="mb-3 form-group">
        <label asp-for="StatusName" class="form-label">@Html.DisplayNameFor(model => model.StatusName)</label>
        <input type="text" asp-for="StatusName" class="form-control" readonly />
        <span asp-validation-for="StatusName" class="text-danger"></span>
    </div>

    <div>
        <!---------------  Botones summit y cancelar  ------------->
        <hr />
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.StatusID">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-x-square"></i> Cancelar
        </a>
    </div>

</form>

