@using queue_management.Models
@model queue_management.Models.Status

@{
    ViewData["Title"] = "Borrar Estatus";
}

<h1>Borrar Estatus </h1>
<h3>Id.: @Model.StatusID - @Model.StatusName </h3>
<h3>¿Estás seguro de que deseas borrar este Estatus?</h3>
<hr />


<form asp-controller="Status" asp-action="Delete" method="post">

    <!-- Definir el id que se envía desde la vista al controlador -->
    <input type="hidden" asp-for="StatusID" value="@Model.StatusID" class="Status" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!--- Para Nombre del Rol   -->
    <div class="mb-3 form-group">
        <label asp-for="StatusName" class="form-label">@Model.StatusName</label>
        <input type="text" asp-for="StatusName" class="form-control" readonly />
        <span asp-validation-for="StatusName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <!---------------  Botones summit y cancelar  ------------->
        <hr />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-eraser"></i> Borrar</button>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-x-square"></i> Cancelar</a>
    </div>

</form>

