@using queue_management.Models
@model queue_management.Models.Area

@{
    ViewData["Title"] = "Editar País";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>

<body>
    <h1>Editar Área</h1>
    <h3>Id.: @Model.AreaID - @Model.AreaName </h3>
    <hr />
    <h4>Desea editar esta Área?</h4>
    <hr />

    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Areas" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Definir el id que se envía desde la vista al controlador -->
            <input type="hidden" asp-for="AreaID" class="Area" />
            <input type="hidden" asp-for="RowVersion" />

            <!---------------  Información propia de Áreas  ------------->
            <div class="form-group mb-3">
                <label asp-for="AreaName" class="control-label" type="text"></label>
                <input asp-for="AreaName" class="form-control" placeholder="Ingresa el Nombre del Área" type="text" />
                <span asp-validation-for="AreaName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AreaDescription" class="control-label" type="text"></label>
                <input asp-for="AreaDescription" class="form-control" placeholder="Ingresa la Descrición del Área" type="text" />
                <span asp-validation-for="AreaDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!---------------  Botones summit y cancelar  ------------->
                <hr />
                <button type="submit" value="Aplicar" class="btn btn-primary"><i class="bi bi-check-square"></i> Aplicar</button>
                <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-x-square"></i> Cancelar</a>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
