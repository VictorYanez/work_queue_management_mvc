@using queue_management.Models
@model queue_management.Models.Region

@{
    ViewData["Title"] = "Detalles de la Región";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h1>Región</h1>
    <h3>Id.: @Model.RegionID - @Model.Country.CountryName - @Model.Department.DepartmentName  </h3>
    <hr />

    <form asp-controller="Regions" asp-action="Details" method="post">
        <!-- Definir el id que se envía desde la vista al controlador -->
        <input type="hidden" asp-for="RegionID" value="RegionID" class="Region" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!--- Para Nombre de País   -->
        <div class="mb-3 form-group">
            <label asp-for="Country.CountryName" class="form-label">@Html.DisplayNameFor(model => model.Country)</label>
            <input type="text" asp-for="Country.CountryName" class="form-control" readonly />
            <span asp-validation-for="Country.CountryName" class="text-danger"></span>
        </div>

        <!--- Para Nombre de Departamento   -->
        <div class="mb-3 form-group">
            <label asp-for="Department.DepartmentName" class="form-label"> @Html.DisplayNameFor(model => model.Department)</label>
            <input type="text" asp-for="Department.DepartmentName" class="form-control" readonly />
            <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
        </div>


        <!--- Para Nombre del Departamento   -->
        <div class="mb-3 form-group">
            <label asp-for="RegionName" class="form-label">@Html.DisplayNameFor(model => model.RegionName)</label>
            <input type="text" asp-for="RegionName" class="form-control" readonly />
            <span asp-validation-for="RegionName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <!---------------  Botones summit y Editar  ------------->
            <hr />
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.RegionID">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-x-square"></i> Cancelar
            </a>
        </div>
    </form>
 
</body>
</html>
