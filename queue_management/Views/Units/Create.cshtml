@using queue_management.Models
@model queue_management.Models.Unit

@{
    ViewData["Title"] = "Crear Unidad";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>

    <h1>Crear Unidad</h1>
    <hr />
    <h4>Crear una nueva unidad asociado a un Área</h4>
    <hr />
    <div class="col-md-4">

        <form asp-action="Create" asp-controller="Units" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo oculto para AreaID -->
            <!--  <input type="hidden" asp-for="UnitID" /> -->

            <!--- Para Lista de Pais   -->
            <div class="mb-3 form-group">
                <label asp-for="AreaID" class="form-label">País </label>
                <select class="form-select form-select sm" asp-for="AreaID" asp-items="ViewBag.AreaID">
                    <option value=""> --- Seleccionar Área --- </option>
                </select>
                <span asp-validation-for="AreaID" class="text-danger"></span>
            </div>
            <!---  Para los campos propios de Unidad  -->
            <div class="form-group mb-3">
                <label asp-for="UnitName" class="control-label" type="text"></label>
                <input asp-for="UnitName" class="form-control" placeholder="Ingresa el nombre de Unidad" type="text" />
                <span asp-validation-for="UnitName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UnitDescription" class="control-label" type="text"></label>
                <input asp-for="UnitDescription" class="form-control" placeholder="Ingresa la descripción de Unidad" type="text" />
                <span asp-validation-for="UnitDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!---------------  Botones summit y cancelar  ------------->
                <hr />
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-square"></i> Aplicar</button>
                <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-x-square"></i> Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
