@using queue_management.Models
@model queue_management.Models.Country

@{
    ViewData["Title"] = "Editar País";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar País</h1>
<h3>Id.: @Model.CountryID - @Model.CountryName </h3>
<hr />
<h4>Desea editar este país?</h4>
<hr />

    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Countries" method="post">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- Definir el id que se envía desde la vista al controlador -->
        <input type="hidden" asp-for="CountryID" class="Country" />
        <input type="hidden" asp-for="RowVersion" />
           
            <div class="form-group mb3">
            <label asp-for="CountryName" class="control-label" type="text">@Html.DisplayNameFor(model => model.CountryName)</label>
                <input asp-for="CountryName" class="form-control" placeholder="Ingresa la descripción del Rol" type="text" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!---------------  Botones summit y cancelar  ------------->
                <hr />
                <button type="submit" value="Aplicar" class="btn btn-primary"><i class="bi bi-check-square"></i> Aplicar</button>
                <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-x-square"></i> Cancelar</a>
            </div>
        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
